{
  "manifest_version": 2,

  "name": "Surfable",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",
  "author": "Daniel Derevjanik",
  "offline_enabled": true,
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "js": [
        "content/index.js"
      ],
      "css": [
        "content/style.css"
      ]
    }
  ],
  "background": {
      "persistant": false,
      "scripts": [
          "background.js"
      ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      }
    }
  },
  "permissions": [
    "browsingData",
    "desktopCapture",
    "tabs",
    "activeTab",
    "notifications",
    "bookmarks",
    "https://ajax.googleapis.com/"
  ]
}
