{
  "manifest_version": 2,

  "name": "Surfable",
  "description": "This extension shows a Google Image search result for the current page",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "version": "1.0",
  "author": "Daniel Derevjanik <daniel.derevjanik@gmail.com>",
  "offline_enabled": true,
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "runt_at": "document_end"
  }],
  "browser_action": {
    "default_icon": {
      "128": "icon128.png",
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
      "persistant": false,
      "scripts": [
          "background.js"
      ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      }
    }
  },
  "permissions": [
    "browsingData",
    "desktopCapture",
    "tabs",
    "activeTab",
    "notifications",
    "bookmarks",
    "topSites",
    "https://ajax.googleapis.com/",
    "http://*/*",
    "https://*/*"
  ]
}
